        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LambdaRemover"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <TextBox Name="InputTextBox" HorizontalAlignment="Left" Height="263" Margin="395,31,0,0" TextWrapping="NoWrap" Text="TextBox" Width="387" VerticalAlignment="Top" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>
        <TextBlock x:Name="LogTextBlock" HorizontalAlignment="Left" Margin="10,325,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="84" Width="772"><Run Text="TextBlock"/></TextBlock>
        <TextBox Name="OutputTextBox" HorizontalAlignment="Left" Height="263" Margin="10,31,0,0" TextWrapping="NoWrap" Text="TextBox" Width="380" VerticalAlignment="Top"  AcceptsReturn="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>
        <Button Name="RefactorButton" Content="Button" HorizontalAlignment="Left" Margin="355,0,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
